extends ../../layout

block content
    .row
        .col
            a(href="/projects/view/" + project.projectId).btn.text-primary
                i.fas.fa-chevron-circle-left
                span.ms-1 Back to Project
            h1 Update User Role for #{project.name}
    .row
        .col
            table#update-user-table
                thead
                    tr
                        th Username
                        th Role
                        th Actions
                    tbody
                        each row in projectUsers
                            tr
                                td= row.username
                                td= row.role
                                td
                                    a(href="/projects/assign/toggleAdmin/" + project.projectId + "/" row.userId)
                                        i.fas.fa-eye
                                        span.ms-1 Toggle Admin

block scripts
    script(src="/js/project-assign-update.js")
