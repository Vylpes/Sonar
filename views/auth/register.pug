extends ../layout

block content
    h1 Register
    form(method='post' action='/auth/register')
        .form-group
            label Username
            input(type='text' name='username').form-control
        .form-group
            label Email
            input(type='text' name='email').form-control
        .form-group
            label Password
            input(type='password' name='password').form-control
        .form-group
            label Repeat Password
            input(type='password' name='passwordRepeat').form-control
        .form-group
            input(type='submit' value='Login').form-control