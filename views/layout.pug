doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        block styles
    body
        if user.authenticated
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                .container-fluid
                    a.navbar-brand(href="/") Sonar
                    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link(href="/") Home
                            li.nav-item
                                a.nav-link(href="/dashboard") Dashboard
                            li.nav-item
                                a.nav-link(href="/auth/logout") Logout
                        span.navbar-text Logged in as #{user.username}
        else
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                .container-fluid
                    a.navbar-brand(href="/") Sonar
                    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link(aria-current="page" href="/") Home
                            li.nav-item
                                a.nav-link(href="/auth/login") Login
                            li.nav-item
                                a.nav-link(href="/auth/login") Register
        .container.mt-3
            if (error)
                .alert.alert-danger= error
            if (message)
                .alert.alert-info= message
            block content
        block scripts
        script(src='/lib/bootstrap/js/bootstrap.min.js')