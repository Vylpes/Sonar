doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        block styles
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .container-fluid
                a.navbar-brand(href="/") Sonar
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                .collapse.navbar-collapse#navbarSupportedContent
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        li.nav-item
                            a.nav-link(aria-current="page" href="/") Home
                form.d-flex
                    input.form-control.me-2(type="search" placeholder="Search" aria-label="Search" disabled)
                    button.btn.btn-outline-success.disabled(type="submit") Search
        .container.mt-3
            block content
        block scripts
        script(src='/lib/bootstrap/js/bootstrap.min.js')