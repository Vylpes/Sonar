doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/lib/datatables/datatables.min.css')
        link(rel='stylesheet', href='/lib/fontawesome/css/all.min.css')
        link(rel='stylesheet', href='/css/style.css')
        block styles
    body
        if isAuthenticated
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                .container-fluid
                    a.navbar-brand(href="/dashboard") Sonar
                    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link(href="/dashboard") Dashboard
                            li.nav-item
                                a.nav-link(href="/projects/list") Projects
                            li.nav-item
                                a.nav-link(href="/tasks/list") Tasks
                        ul.navbar-nav.ms-auto.mb-2.mb-lg-0.float-right
                            li.nav-item
                                a.nav-link(href="/auth/logout") Logout
                        span.navbar-text Logged in as #{user.Username}
        else
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                .container-fluid
                    a.navbar-brand(href="/") Sonar
                    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link(aria-current="page" href="/") Home
                        ul.navbar-nav.ms-auto.mb-2.mb-lg-0.float-right
                            li.nav-item
                                a.nav-link(href="/auth/login") Login / Register
        .container.mt-3
            if (error)
                .alert.alert-danger= error
            if (message)
                .alert.alert-info= message
            block content
        script(src='/lib/jquery/js/jquery.min.js')
        script(src='/lib/bootstrap/js/bootstrap.min.js')
        script(src='/lib/datatables/datatables.min.js')
        script(src='/lib/fontawesome/js/all.min.js')
        block scripts
